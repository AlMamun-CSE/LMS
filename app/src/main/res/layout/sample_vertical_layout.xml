<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:background="@drawable/slider_background"
    app:cardCornerRadius="2dp"
    app:cardElevation="8dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="300dp"
                android:layout_height="150dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/image_3" />

            <RelativeLayout
                android:id="@+id/relLayout1"
                android:layout_width="300dp"
                android:layout_height="150dp"
                android:padding="10dp">


                <TextView
                    android:id="@+id/courseNameId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="2dp"
                    android:text="IELTS Vocabulary to Improve your Lexical Resource and Spoken"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                </LinearLayout>

                <TextView
                    android:id="@+id/coursePriceId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/courseNameId"
                    android:layout_marginTop="5dp"
                    android:gravity="center_horizontal"
                    android:text="$600.00"
                    android:textColor="#0ABC5A"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/lossPriceId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/courseNameId"
                    android:layout_marginStart="11dp"
                    android:layout_marginLeft="11dp"
                    android:layout_marginTop="6dp"
                    android:textColor="@color/red_900"
                    android:layout_toEndOf="@+id/coursePriceId"
                    android:layout_toRightOf="@+id/coursePriceId"
                    android:text="$750.00" />

                <View
                    android:id="@+id/view"
                    android:layout_width="55dp"
                    android:layout_height="2dp"
                    android:layout_below="@+id/lossPriceId"
                    android:layout_marginStart="-54dp"
                    android:layout_marginLeft="-54dp"
                    android:layout_marginTop="-9dp"
                    android:layout_toEndOf="@+id/lossPriceId"
                    android:layout_toRightOf="@+id/lossPriceId"
                    android:background="#EF0606" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/coursePriceId"
                    android:layout_marginTop="5dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <RatingBar
                        android:id="@+id/rating"
                        style="?android:attr/ratingBarStyleSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:isIndicator="true"
                        android:numStars="5"
                        android:rating="4.5"
                        app:layout_constraintStart_toStartOf="parent"
                        tools:ignore="MissingConstraints" />

                    <TextView
                        android:id="@+id/courseRatingNumberId"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_toRightOf="@id/rating"
                        android:padding="1dp"
                        android:text="(3)"
                        android:textSize="8dp"
                        app:layout_constraintStart_toEndOf="@+id/rating"
                        tools:ignore="MissingConstraints">
                    </TextView>

                    <TextView
                        android:id="@+id/courseLeassonId"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginEnd="50dp"
                        android:layout_marginRight="50dp"
                        android:layout_weight="1.5"
                        android:background="#F6EFAB"
                        android:padding="2dp"
                        android:text="0 Lesson"
                        android:textSize="8dp"
                        app:layout_constraintEnd_toStartOf="@+id/courseSectionId"
                        tools:ignore="MissingConstraints">
                    </TextView>

                    <TextView
                        android:id="@+id/courseSectionId"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1.5"
                        android:background="#A2E1BE"
                        android:padding="2dp"
                        android:text="0 Section"
                        android:textSize="8dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        tools:ignore="MissingConstraints">
                    </TextView>

                </androidx.constraintlayout.widget.ConstraintLayout>


            </RelativeLayout>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>