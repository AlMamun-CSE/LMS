<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.airbnb.lottie.LottieAnimationView
            android:layout_marginTop="100dp"
            android:layout_marginBottom="15dp"
            android:id="@+id/forgetImage"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_gravity="center"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:lottie_rawRes="@raw/forget_password">
        </com.airbnb.lottie.LottieAnimationView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Forgot Password?"
            android:textSize="18sp"
            android:textColor="#3EB255"
            android:background="@android:color/transparent"
            android:layout_gravity="center">
        </TextView>
        <TextView
            android:layout_marginBottom="10dp"
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Don't worry we have just need your\n registered email address and it's done! "
            android:textColor="#F56920"
            android:textSize="18sp"
            android:textAlignment="center"
            android:layout_gravity="center">
        </TextView>

        <EditText
            android:id="@+id/emailverificationId"
            android:layout_marginBottom="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:hint="Provide your registered email here"
            android:backgroundTint="#350202">
        </EditText>

        <LinearLayout
            android:id="@+id/forgotPasswordContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="8dp">

            <ImageView
                android:id="@+id/forgotEmailIcon"
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:src="@drawable/ic_email_24"
                android:layout_gravity="center">
            </ImageView>

            <TextView
                android:id="@+id/forgotText"
                android:layout_marginLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:text="Recovery email sent successful! check your inbox."
                android:textColor="#11A10C">
            </TextView>

        </LinearLayout>

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/progressBarEmail"
            android:theme="@style/RedProgressBar"
            android:indeterminate="true"
            android:visibility="gone"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_gravity="center"
            tools:layout_editor_absoluteX="182dp"
            tools:layout_editor_absoluteY="482dp">
        </ProgressBar>

        <Button
            android:id="@+id/resetPasswordButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:text="Reset Password"
            android:textSize="18sp"
            android:textAllCaps="false"
            android:enabled="false"
            android:textColor="#50ffffff"
            android:theme="@style/RedProgressBar"
            android:background="@color/red_900">
        </Button>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="#000"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:text="check your inbox after clicking the button above">
        </TextView>

        <TextView
            android:id="@+id/gobackid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="@color/red_900"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            android:text="&lt; &lt; Go Back">
        </TextView>

    </LinearLayout>

</FrameLayout>